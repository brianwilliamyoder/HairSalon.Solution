@{
  Layout = "_Layout";
}

@using HairSalon.Models
@model List<HairSalon.Models.Client>;

<h1>Clients</h1>

@if (Model.Count() == 0)
{
  <h3>There are no clients in the system.</h3>
}
else
{
  <ul>
    @foreach (Client client in Model)
    {
      <li>@Html.ActionLink($"{client.ClientName}", "Details", new { clientId = client.ClientId }) | @client.Stylist.StylistName</li>
    }
  </ul>
}

